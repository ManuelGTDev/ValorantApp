<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almost_black"
    tools:context=".ui.view.WeaponDetailActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/red"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="100dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/valorant_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <ImageView
            android:id="@+id/weaponImageDetail"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"
            android:src="@drawable/vandal_icon">
        </ImageView>

        <TextView
            android:id="@+id/weaponNameDetail2"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="100dp"
            android:alpha=".7"
            android:scaleX="1.4"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VANDAL"
            android:textSize="70dp"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/weaponNameDetail3"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="100dp"
            android:alpha=".3"
            android:scaleX="1.4"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VANDAL"
            android:textSize="72dp"
            android:textColor="@color/white">
        </TextView>

    </FrameLayout>

    <TextView
        android:layout_margin="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        android:text="Weapon Name"
        android:textSize="50dp"
        android:textColor="@color/red">
    </TextView>


    <TextView
        android:layout_margin="10dp"
        android:id="@+id/weaponNameDetail"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:text="VANDAL"
        android:textSize="70dp"
        android:textColor="@color/white">
    </TextView>


    <TextView
        android:layout_margin="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        android:text="Weapon Type"
        android:textSize="50dp"
        android:textColor="@color/red">
    </TextView>


    <TextView
        android:layout_margin="10dp"
        android:id="@+id/weaponType"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.90"
        android:text="Heavy"
        android:textSize="50dp"
        android:textColor="@color/white">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>